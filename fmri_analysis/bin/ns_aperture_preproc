#! /usr/bin/env python

"""Runs a processing step for a subject in the natural scenes aperture fMRI
experiment"""

import os
import argparse

import ns_aperture.config, ns_aperture.fmri_analysis.paths
import ns_aperture.fmri_analysis.preproc


def main():
	"""Execution function"""

	desc = """Runs a processing step for a subject in the natural scenes aperture
	          fMRI experiment"""

	eg = """
	Steps:
	  convert : converts the scanner DICOM images to NIFTIs.
	  correct : performs motion correction.
	  fieldmap : prepares the fieldmaps.
	  undistort : applies distortion correction to the functional data.
	  surf_reg : register to the canonical anatomy.
	  vol_to_surf : project the volumes onto the cortical surface.
	
	---N.B.---
	
	* The script must be run from the ns_aperture/fmri_analysis/bin directory.
	
	"""

	target_dir = "ns_aperture/fmri_analysis/bin"

	current_dir = os.getcwd()

	if current_dir[ -len( target_dir ): ] != target_dir:
		raise IOError( "Script needs to be launched from %s" % target_dir )

	# use this formatter so we can supply our own indentation
	fmt = argparse.RawDescriptionHelpFormatter

	parser = argparse.ArgumentParser( description = desc,
	                                  epilog = eg,
	                                  formatter_class = fmt,
	                                )

	parser.add_argument( "subj_id",
	                     help = "Subject identifier"
	                   )

	preproc_steps = ( "convert",
	                  "correct",
	                  "fieldmap",
	                  "undistort",
	                  "sess_reg",
	                  "vol_to_surf"
	                )

	parser.add_argument( "preproc_step",
	                     choices = preproc_steps,
	                     help = "Preprocessing step"
	                   )

	args = parser.parse_args()

	# check the arguments are valid
	if len( args.subj_id ) != 5 or args.subj_id[ 0 ] != "s":
		raise ValueError( "Subject ID needs to be in the format of sXXXX" )

	# load the experiment / subject info
	conf = ns_aperture.config.get_conf( args.subj_id )
	paths = ns_aperture.fmri_analysis.paths.get_subj_paths( conf )

	if args.preproc_step == "convert":
		ns_aperture.fmri_analysis.preproc.convert( paths, conf )

	elif args.preproc_step == "correct":
		ns_aperture.fmri_analysis.preproc.motion_correct( paths, conf )

	elif args.preproc_step == "fieldmap":
		ns_aperture.fmri_analysis.preproc.fieldmaps( paths, conf )

	elif args.preproc_step == "undistort":
		ns_aperture.fmri_analysis.preproc.undistort( paths, conf )

	elif args.preproc_step == "sess_reg":
		ns_aperture.fmri_analysis.preproc.sess_reg( paths, conf )

	elif args.preproc_step == "vol_to_surf":
		ns_aperture.fmri_analysis.preproc.vol_to_surf( paths, conf )

	else:
		print "Not completed"


if __name__ == "__main__":
	main()
