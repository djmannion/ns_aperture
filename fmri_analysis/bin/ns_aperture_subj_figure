#! /usr/bin/env python

"""Plots a figure for a subject in the Glass pattern coherence fMRI
experiment"""

import argparse
import os

import ns_aperture.config, ns_aperture.fmri_analysis.figures

desc = """Plots a figure for a subject in the Glass coherence fMRI
experiment"""

eg = """
Example usage:
  plot the condition differences for subject s1000:
    ns_aperture_subj_figure s1000 cond_diff

Figures:
  cond_diff : 

---N.B.---

* The script must be run from the ns_aperture/fmri_analysis/bin directory.

"""

target_dir = "ns_aperture/fmri_analysis/bin"

current_dir = os.getcwd()

if current_dir[ -len( target_dir ): ] != target_dir:
	raise IOError( "".join( [ "Script needs to be launched from ",
	                          target_dir
	                        ]
	                      )
	             )

# use this formatter so we can supply our own indentation
fmt = argparse.RawDescriptionHelpFormatter

parser = argparse.ArgumentParser( description = desc,
                                  epilog = eg,
                                  formatter_class = fmt,
                                )

parser.add_argument( "subj_id",
                     help = "Subject identifier"
                   )

figures = ( "cond_diff",
            "block_time"
          )

parser.add_argument( "figure",
                     choices = figures,
                     help = "Figure type"
                   )

args = parser.parse_args()

# check the arguments are valid
if len( args.subj_id ) != 5 or args.subj_id[ 0 ] != "s":
	raise ValueError( "Subject ID needs to be in the format of sXXXX" )

# load the experiment / subject info
subj_conf = ns_aperture.config.get_subj_conf()[ args.subj_id ]
subj_paths = ns_aperture.config.get_subj_paths( args.subj_id )

conf = ns_aperture.config.get_conf()

if args.figure == "cond_diff":
	ns_aperture.fmri_analysis.figures.subj_cond_diff( subj_paths, conf )

elif args.figure == "block_time":
	ns_aperture.fmri_analysis.figures.subj_resp_over_time( subj_paths, conf )

else:
	print "Not completed"
